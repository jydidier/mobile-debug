{
    "manifest_version": 2,
    "name": "Mobile debug",
    "version": "0.1",
    
    "description": "Adds a console output tab to Firefox mobile",

    "applications": {
        "gecko": {
            "id": "mobile-debug@red-id.net"
        }
    },

    "permissions": [ "activeTab" ],

    "background" : {
        "scripts": [ "/scripts/mobile-debug.js" ]
    },

    "browser_action": {
        "default_title" : "Mobile debug"
    }

}
